global:
  resolve_timeout: 5m

route:
  receiver: "null"
  group_by: ["alertname", "job", "severity"]
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h

  routes:
    - matchers:
        - severity="critical"
      receiver: "email-critical"

    - matchers:
        - severity="warning"
      receiver: "email-warning"

receivers:
  - name: "null"

  - name: "email-critical"
${ALERT_EMAIL_CRITICAL_YAML}

  - name: "email-warning"
${ALERT_EMAIL_WARNING_YAML}

templates:
  - "/etc/alertmanager/templates/*.tmpl"
