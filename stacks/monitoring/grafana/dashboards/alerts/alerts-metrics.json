{
  "uid": "alerts-metrics",
  "title": "Alerts (Metrics)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["alerts", "prometheus", "victoriametrics"],
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "severity",
        "label": "severity",
        "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
        "query": { "query": "label_values(ALERTS, severity)" },
        "includeAll": true,
        "multi": true,
        "refresh": 2,
        "sort": 1
      },
      {
        "type": "query",
        "name": "alertname",
        "label": "alertname",
        "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
        "query": { "query": "label_values(ALERTS, alertname)" },
        "includeAll": true,
        "multi": true,
        "refresh": 2,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Firing alerts (count)",
      "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "count(ALERTS{alertstate=\"firing\", severity=~\"$severity\", alertname=~\"$alertname\"})",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Pending alerts (count)",
      "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "count(ALERTS{alertstate=\"pending\", severity=~\"$severity\", alertname=~\"$alertname\"})",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Alertmanager active alerts (count)",
      "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(alertmanager_alerts{job=\"alertmanager\", state=\"active\"})",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Firing alerts over time",
      "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "count(ALERTS{alertstate=\"firing\", severity=~\"$severity\", alertname=~\"$alertname\"})"
        }
      ]
    },
    {
      "id": 5,
      "type": "table",
      "title": "Firing alerts (label sets)",
      "datasource": { "type": "prometheus", "uid": "DS_PROMETHEUS" },
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 10 },
      "targets": [
        {
          "refId": "A",
          "expr": "ALERTS{alertstate=\"firing\", severity=~\"$severity\", alertname=~\"$alertname\"}",
          "instant": true
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": {} }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
